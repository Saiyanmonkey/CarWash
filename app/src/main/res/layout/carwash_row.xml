<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardCornerRadius="12dp"
    android:id="@+id/mycardview"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="28dp"
    android:elevation="90dp"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="148dp">

        <TextView
            android:layout_alignLeft="@+id/mycardview"
            android:layout_alignTop="@+id/mycardview"
            android:layout_margin="18dp"
            android:layout_width="wrap_content"
            android:text="Car Wash Name"
            android:textSize="16dp"
            android:fontFamily="@font/opensans_bold"
            android:textColor="#1C69FF"
            android:id="@+id/carwash"
            android:layout_height="wrap_content"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/locationtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="18dp"
            android:layout_below="@id/carwash"
            android:fontFamily="@font/opensans_bold"
            android:text="Location"
            android:textColor="#C6C6C6"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/distancetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="128dp"
            android:layout_below="@id/carwash"
            android:layout_toRightOf="@id/locationtitle"
            android:fontFamily="@font/opensans_bold"
            android:text="Location"
            android:textColor="#C6C6C6"
            android:textSize="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:id="@+id/locationname"
            android:layout_marginLeft="18dp"
            android:layout_below="@id/locationtitle"
            android:fontFamily="@font/opensans_bold"
            android:text="Location name"
            android:textColor="#000000"
            android:textSize="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:id="@+id/distancevalue"
            android:layout_marginLeft="128dp"
            android:layout_below="@id/distancetitle"
            android:layout_toRightOf="@id/locationtitle"
            android:fontFamily="@font/opensans_bold"
            android:text="Distance value"
            android:textColor="#000000"
            android:textSize="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:id="@+id/ratingtitle"
            android:layout_marginLeft="128dp"
            android:layout_toRightOf="@id/locationtitle"
            android:fontFamily="@font/opensans_bold"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:drawableLeft="@drawable/ratingicon24px"
            android:text="Rating :"
            android:textColor="#000000"
            android:textSize="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:id="@+id/ratingvalue"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/ratingtitle"
            android:fontFamily="@font/opensans_bold"
            android:text="Value"
            android:textColor="#000000"
            android:textSize="12dp"
            />


    </RelativeLayout>




</androidx.cardview.widget.CardView>