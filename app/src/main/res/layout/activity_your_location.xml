<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourLocation"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:id="@+id/pickuptitle"
        android:textSize="24dp"
        android:textColor="#000"
        android:fontFamily="@font/opensans_bold"
        android:layout_centerHorizontal="true"
        android:text="Pick up Location"
        />



    <Button
        android:background="@drawable/basic_button"
        android:text="Auto Detect Location"
        android:textColor="#FFF"
        android:textSize="18dp"
        android:fontFamily="@font/opensans_bold"
        android:textAllCaps="false"
        android:id="@+id/buttonGetCurrentLocation"
        android:layout_centerHorizontal="true"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pickuptitle"
        android:layout_marginTop="28dp"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="22dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonGetCurrentLocation"
        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/yourlocationtitle"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="26dp"
        android:textColor="#000"
        android:fontFamily="@font/opensans_bold"
        android:text="Your Location is"
        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/textAddress"
        android:layout_height="wrap_content"
        android:text="Address"
        android:fontFamily="@font/opensans_regular"
        android:textColor="#000"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="22dp"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/yourlocationtitle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/textLatLong"
        android:layout_height="wrap_content"
        android:text="Address"
        android:fontFamily="@font/opensans_regular"
        android:textColor="#000"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="22dp"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textAddress"
        />

    <Button
        android:layout_width="186dp"
        android:id="@+id/confirmlocation"
        android:textSize="18dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textLatLong"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:background="@drawable/basic_button"
        android:textColor="#FFF"
        android:fontFamily="@font/opensans_bold"
        android:textAllCaps="false"
        android:text="Confirm Location"
        />




</RelativeLayout>