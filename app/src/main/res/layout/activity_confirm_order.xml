<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmOrder">

    <TextView
        android:id="@+id/select"
        android:textSize="28dp"
        android:fontFamily="@font/opensans_bold"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Order"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        />

    <TextView
        android:id="@+id/orderserviceto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Service To :"
        android:layout_below="@id/select"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:fontFamily="@font/opensans_bold"
        android:textColor="#1C69FF"
        android:layout_marginLeft="28dp"/>

    <TextView
        android:id="@+id/carwashname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABC Car Wash"
        android:layout_below="@id/orderserviceto"
        android:layout_marginTop="16dp"
        android:textSize="14dp"
        android:fontFamily="@font/opensans_regular"
        android:textColor="#000000"
        android:layout_marginLeft="28dp"/>

    <TextView
        android:id="@+id/addresstitle"
        android:drawablePadding="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Wash Address"
        android:drawableLeft="@drawable/place_24px"
        android:layout_below="@id/carwashname"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:fontFamily="@font/opensans_bold"
        android:textColor="#1C69FF"
        android:layout_marginLeft="28dp"/>

    <TextView
        android:id="@+id/carwashaddress"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:text="Technology Park Malaysia, 57000 Kuala Lumpur, Federal Territory of Kuala Lumpur, Malaysia"
        android:layout_below="@id/addresstitle"
        android:layout_marginTop="16dp"
        android:textSize="14dp"
        android:fontFamily="@font/opensans_regular"
        android:textColor="#000000"
        android:layout_marginLeft="28dp"/>

    <TextView
        android:id="@+id/packagess"
        android:drawablePadding="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Package"
        android:drawableLeft="@drawable/package_24px"
        android:layout_below="@id/carwashaddress"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:fontFamily="@font/opensans_bold"
        android:textColor="#1C69FF"
        android:layout_marginLeft="28dp"/>

    <TextView
        android:id="@+id/package_name"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:text="Package A"
        android:layout_below="@id/packagess"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:fontFamily="@font/opensans_regular"
        android:textColor="#000000"
        android:layout_marginLeft="28dp"/>

    <TextView
        android:id="@+id/methods"
        android:drawablePadding="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method"
        android:drawableLeft="@drawable/payment_24px"
        android:layout_below="@id/price"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:fontFamily="@font/opensans_bold"
        android:textColor="#1C69FF"
        android:layout_marginLeft="28dp"/>

    <RadioGroup
        android:gravity="center"
        android:layout_marginTop="42dp"
        android:layout_below="@id/methods"
        android:id="@+id/list_answer"
        android:layout_marginHorizontal="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/debit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_regular"
            android:textSize="22dp"
            android:text="Debit Card" />

        <RadioButton
            android:layout_marginLeft="48dp"
            android:id="@+id/cash"
            android:fontFamily="@font/opensans_regular"
            android:textSize="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash" />

    </RadioGroup>

    <TextView
        android:id="@+id/Total"
        android:drawablePadding="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:layout_below="@id/package_name"
        android:layout_marginTop="16dp"
        android:textSize="18dp"
        android:fontFamily="@font/opensans_bold"
        android:textColor="#1C69FF"
        android:layout_marginLeft="28dp"/>

    <TextView
        android:id="@+id/price"
        android:drawablePadding="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RM 80"
        android:layout_below="@id/Total"
        android:layout_marginTop="16dp"
        android:textSize="24dp"
        android:fontFamily="@font/opensans_bold"
        android:textColor="#000"
        android:layout_marginLeft="28dp"/>

    <Button
        android:textSize="24dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/opensans_bold"
        android:textColor="#FFF"
        android:text="Confirm"
        android:id="@+id/confirmorder"
        android:textAllCaps="false"
        android:background="@drawable/basic_button"
        android:layout_marginHorizontal="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_answer"
        />


</RelativeLayout>